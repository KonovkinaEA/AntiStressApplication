<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/texts_background"
    tools:context=".TextsActivity">

    <ImageView
        android:id="@+id/backFromTexts"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/texts_back"
        android:onClick="closeTextsActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.94"
        tools:ignore="SpeakableTextPresentCheck" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="360dp"
        android:layout_height="470dp"
        app:layout_constraintBottom_toTopOf="@+id/backFromTexts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.67"
        android:divider="@null"
        android:dividerHeight="3dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>